}
.menu ul.dropit-submenu a {
    color: #7A868E;
    display: block;
    font-size: 14px;
    line-height: 25px;
    padding: 0 18px;
        text-decoration: none;
}
.menu ul.dropit-submenu a:hover {
    background: none repeat scroll 0 0 #248FC1;
    color: #FFFFFF;
    text-decoration: none;
}

